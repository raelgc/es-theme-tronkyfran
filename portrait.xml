<theme>

  <formatVersion>3</formatVersion>

	<view name="system">

    <image name="background" extra="true">
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>

    <image name="logo">
      <path>./art/logos/${system.theme}.svg</path>
    </image>

    <image name="background" extra="true">
      <path>./art/backgrounds/${system.theme}_art_blur.jpg</path>
    </image>

	</view>

  <view name="basic">

		<textlist name="gamelist">
			<pos>0.025 0.22</pos>
			<size>0.950 0.68</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>

	</view>

  <view name="basic, detailed, video">

    <image name="logo">
      <path>./art/logos/${system.theme}.svg</path>
      <pos>0.025 0.079</pos>
      <maxSize>0.45 0.1</maxSize>
      <origin>0 0.5</origin>
    </image>

    <image name="header" extra="true">
      <path>./art/header_dark.png</path>
    </image>

    <image name="controller" extra="true">
        <path>./art/controllers/${system.theme}.png</path>
        <pos>0.900 0.074</pos>
        <maxSize>0.480 0.156</maxSize>
        <origin>0.5 0.5</origin>
    </image>

    <image name="background">
      <path>./art/background_dark.gif</path>
    </image>

    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>393a3b</color>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.020</fontSize>
			<size>0.14 0.04</size>
		</text>

    <datetime name="md_releasedate">
      <color>393a3b</color>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.020</fontSize>
      <pos>0.565 0.875</pos>
    </datetime>

		<image name="header" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<path>./art/header.gif</path>
		</image>

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/background.png</path>
		</image>

		<text name="md_description">
      <fontSize>0.025</fontSize>
      <size>0.33 0.602</size>
      <pos>0.3 0.22</pos>
		</text>

		<textlist name="gamelist">
      <pos>0.655 0.22</pos>
      <size>0.318 0.710</size>
      <alignment>left</alignment>
      <horizontalMargin>0.01</horizontalMargin>
			<selectorColor>e60000</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>000000</primaryColor>
			<secondaryColor>666666</secondaryColor>
      <fontPath>./art/OPENSANS.TTF</fontPath>
      <fontSize>0.03</fontSize>
		</textlist>

    <image name="md_image">
      <pos>0.025 0.22</pos>
			<maxSize>0.250 0.602</maxSize>
      <origin>0 0</origin>
    </image>

    <text name="md_lbl_players">
      <pos>0.225 0.87</pos>
    </text>

    <text name="md_genre">
      <pos>0.025 0.87</pos>
      <size>0.2 0.04</size>
    </text>

    <text name="md_players">
      <pos>0.268 0.87</pos>
    </text>

    <text name="md_developer">
      <pos>0.3 0.87</pos>
    </text>

    <!-- Hidden items -->

    <image name="md_marquee">
      <pos>1 1</pos>
    </image>

    <text name="md_lbl_genre">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_developer">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_releasedate">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_rating">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_publisher">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_lastplayed">
      <pos>1 1</pos>
    </text>

    <text name="md_lbl_playcount">
      <pos>1 1</pos>
    </text>

    <text name="md_playcount">
      <pos>1 1</pos>
    </text>

    <datetime name="md_lastplayed">
      <pos>1 1</pos>
    </datetime>

    <text name="md_publisher">
      <pos>1 1</pos>
    </text>

    <rating name="md_rating">
      <pos>1 1</pos>
    </rating>

	</view>

  <feature supported="video">
    <view name="video">
      <image name="md_image">
        <pos>1 1</pos>
      </image>
      <video name="md_video">
        <origin>0 0</origin>
        <pos>0.025 0.22</pos>
  			<maxSize>0.250 0.602</maxSize>
        <origin>0 0</origin>
      </video>
    </view>
  </feature>

</theme>
