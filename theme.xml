<theme>

  <formatVersion>3</formatVersion>
  <include>./portrait.xml</include>

  <variables>
    <locale>pt-br</locale>
    <themeColor>ffffff</themeColor>
  </variables>

  <!-- <include>./help.xml</include> -->

  <view name="system, basic, detailed, video">

    <helpsystem name="help">
      <textColor>${themeColor}ff</textColor>
    </helpsystem>

  </view>

  <view name="basic, detailed, video">

    <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>${themeColor}</color>
		</text>

    <datetime name="md_releasedate">
      <color>${themeColor}</color>
    </datetime>

    <textlist name="gamelist">
			<primaryColor>${themeColor}</primaryColor>
		</textlist>

    <image name="header" extra="true">
      <path>./art/header_dark.png</path>
    </image>

    <image name="background">
      <path>./art/background_dark.gif</path>
    </image>


  </view>

</theme>